<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/schedule_image"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/schedule_title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/schedule_image"
            android:padding="8dp"
            android:text="title_placeholder"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <TextView
            android:id="@+id/schedule_start_hours"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_image"
            android:padding="8dp"
            android:text="news_placeholder"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/schedule_subTitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_start_hours"
            android:maxHeight="0dp"
            android:padding="8dp"
            android:text="sports_info_placeholder" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
